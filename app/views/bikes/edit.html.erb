<br>
<div class="container">
  <h1 class = "text-center">Edit bike on sale</h1>

  <%= simple_form_for @bike do |f| %>
    <%= f.input :brand %>
    <%= f.input :model %>
    <%= f.input :details %>
    <%= f.input :category %>
    <%= f.input :wheel_size %>
    <%= f.input :price %>
    <%= f.submit "Submit", class: "btn btn-primary" %>
  <% end %>
</div>
