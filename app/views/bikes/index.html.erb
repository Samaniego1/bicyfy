<br>
<div class="container">
  <h1 class = "text-center">My bikes on sale</h1>
  <br>
  <% @bikes.each do |bike| %>
    <li class="list-unstyled"> <%= bike.brand %>
    <%= bike.model %>
    <%= bike.details %>
    <%= bike.category %>
    <%= bike.wheel_size %>
    <%= bike.price %> </li>
    <%= link_to "Details", bike_path(bike), class: "btn btn-primary" %>
    <hr>
  <% end %>
</div>
