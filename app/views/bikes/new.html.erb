<br>
<div class="container">
  <h1 class = "text-center">New bike to sell</h1>

  <%= simple_form_for @bike do |f| %>
    <%= f.input :brand %>
    <%= f.input :model %>
    <%= f.input :details %>
    <%= f.input :category, collection: Bike::CATEGORY %>
    <%= f.input :wheel_size, collection: Bike::WHEEL_SIZE %>
    <%= f.input :price %>
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>
    <%= f.submit "Submit", class: "btn btn-danger" %>
  <% end %>
</div>
