<div class="container">
  <h2><%= @user.name %></h2>
  <p><%= @user.address %></p>
  <p><%= @user.email %></p>
  <p><%= @user.phone %></p>

  <h2>My reviews</h2>
  <% @reviews.each do |review| %>
